

@model Book

<div class="card card-outline-primary m-1 p-1">
    <a asp-action="BookInfo" asp-route-bookID="@Model.BookId">
        <div class="bg-faded p-1">
            <h4>
                @Model.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>$@Model.Price.ToString()</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">@Model.Author</div>
    </a>
    <div class="float-end" style="margin-left:90%;">
        <form method="post" asp-page="/Cart">
            <input type="hidden" asp-for="@Model.BookId" />
            Quantity: <input type="number" name="quantity" value="1" style="width: 50px;"/><br /><br />
            <button type="submit" class="btn btn-primary btn-sm">Add to Cart</button>
        </form>
    </div>
</div>
