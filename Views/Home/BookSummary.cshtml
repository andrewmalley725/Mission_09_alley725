

@model Book

<style>
    a:hover {
        text-decoration: none;
    }
</style>

<div class="card card-outline-primary m-1 p-1">
    <a asp-action="BookInfo" asp-route-bookID="@Model.BookId">
        <div class="bg-faded p-1">
            <h4>
                @Model.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>$@Model.Price.ToString()</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">@Model.Author</div>
    </a>
    <div style="margin-left:80%;">
        <form method="post" asp-page="/Cart">
            <input type="hidden" asp-for="@Model.BookId" />
            <input type="hidden" name="returnURL" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
            @*Bootstrapped quantity input box*@
            <div class="input-group input-group-sm mb-3" style="height:40px;">
                Quantity: <input type="number" name="quantity" min="1" value="1" class="form-control" aria-describedby="inputGroup-sizing-sm" >
            </div>
            <button type="submit" class="btn btn-primary btn-sm" style="float: right;">Add to Cart</button>
        </form>
    </div>
</div>
