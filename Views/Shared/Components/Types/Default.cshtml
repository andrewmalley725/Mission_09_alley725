
@{
}

@model IEnumerable<string>
<h2>Filter by category: </h2><br />
<a asp-controller="Home" asp-action="Index" asp-route-category="" class="btn btn-outline-secondary">View all Books</a><br /><br />
@foreach (string cat in Model)
{
        <a asp-controller="Home" asp-action="Index" asp-route-category="@cat" asp-route-pageNum="1" class="btn @(ViewBag.SelectedCat == cat ? "btn-primary" : "btn-outline-secondary")">@cat</a><br/><br />
}

